@model Polyclinic.Web.Models.VisitViewModel

@{
    ViewData["Title"] = "CreateVisit";
}

<div class="d-flex justify-content-between mb-2">
    <h1>New Visit</h1>
    <div class="mt-2">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateVisit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="DoctorId" class="control-label"></label>
            <div>
                <select asp-for="DoctorId" class="form-select custom-select" asp-items="ViewBag.Doctors">
                    <option selected="selected" disabled="disabled">Choose Doctor</option>
                </select>
            </div>
            <span asp-validation-for="DoctorId" class="text-danger"></span>

            <label asp-for="PatientId" class="control-label"></label>
            <div>
                <select asp-for="PatientId" class="form-select custom-select" asp-items="ViewBag.Patiens">
                    <option selected="selected" disabled="disabled">Choose Patient</option>
                </select>
            </div>
            <span asp-validation-for="PatientId" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="DateVisit" class="control-label"></label>
                <input asp-for="DateVisit" class="form-control" />
                <span asp-validation-for="DateVisit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complaint" class="control-label"></label>
                <input asp-for="Complaint" class="form-control" />
                <span asp-validation-for="Complaint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
